{% extends "base.html.twig" %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block mainContent %}
    <div class="container mt-4">
        <h2>Liste des contacts</h2>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Téléphone</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.id }}</td>
                        <td>{{ contact.nom }}</td>
                        <td>{{ contact.prenom }}</td>
                        <td>{{ contact.telephone }}</td>
                        <td>
                            <a href="{{ path('app_contact', {id: contact.id}) }}" class="btn btn-info">Afficher</a>
                            <a href="{{ path('app_modifier', {id: contact.id}) }}" class="btn btn-warning">Modifier</a>
                            <a href="{{ path('app_supprimer', {id: contact.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}